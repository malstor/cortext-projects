<div class="element message user-<%= e.author %>" id="Message-<%= e.id %>">

	<div class="info">
		<h3 class="author"><%= author.name %></h3>
		<span class="type message"><%= e.type %></span>
		<span class="date"><a href="<%= e.permalink %>"><%= moment(e.date).format("DD.MM.YYYY") %></a></span>
	</div><!-- /info -->

	<div class="body">
	   <%= marked(e.content) %>
	</div>

</div>