<!DOCTYPE html>
<html>

<head>
<meta charset='utf-8'>
<title><%= title %></title>

<script src="/assets/bones/all.js?<%= version %>" type="text/javascript" charset="utf-8"></script>
<script src="/assets/server/js/lib/jquery-ui-1.8.21.custom.min.js?<%= version %>" type="text/javascript" charset="utf-8"></script>
<script src="/assets/server/js/lib/moment.js?<%= version %>" type="text/javascript" charset="utf-8"></script>
<script src="/assets/server/js/lib/marked.js?<%= version %>" type="text/javascript" charset="utf-8"></script>
<script src="/assets/server/js/main.js?<%= version %>" type="text/javascript" charset="utf-8"></script>

<link rel="stylesheet" href="/assets/server/css/reset.css?<%= version %>" type="text/css" />  
<!-- <link rel="stylesheet" href="/assets/server/bootstrap/css/bootstrap.min.css" type="text/css" />   -->
<link rel="stylesheet" href="/assets/server/css/main.css?<%= version %>" type="text/css" />

</head>

<body>

<div id="conteneur-principal">

<div id="header">
<div id="menu">

<nav id="path">
<ul>
<li class="home"><a href="/dashboard"><img src="/assets/server/images/home.png" alt="#" /></a></li>
<li class="dashboard"><a class="name" href="/dashboard">dashboard</a></li>
<% _.each(path, function(element){ %>
<li class="<%= element.type %>"><span class="type"><%= element.type %></span><a class="name" href="<%= element.url %>"><%= element.name %></a></li>  
<% }); %>
</ul>
</nav>

	<div id="login-panel">
		<form action="" method="post">
			<p>
				<span class="sign">sign in</span> <br/>
				<label class="user">user name
					<input name="username" type="text" value="" />
				</label> <br /><br />
				<label class="password">password
					<input name="password" type="password" value="" />
				</label>
				<input class="enter" type="submit" name="submit" value="Login" /><br/><br />
				<span class="phrase">don't have an account. ask one by providing your email</span>
				<label class="email">email
					<input name="email" type="email" value="" />
					<input class="enter" type="submit" name="submit" value="sign up" />
				</label>
			</p>
		</form>
	</div>
</div> <!-- /#menu-->

<div id="user">
<% if(session && session.user){ %>
<a href="/user/<%= session.user.id %>"><%= session.user.attributes.name %></a>
<% } else { %>
<a href="/login"><button class="btn btn-inverse"><i class="icon-user icon-white"></i> login</button></a>
<% } %>
</div>

</div><!-- #header -->

<div id='main'>
<%= main %>
</div><!-- /#main -->

</div> <!--fin du conteneur principal (englobe menu)-->


<div class="aide">
	<h3>You need help ?</h3>
	<p>you can read collaborative platform documentation :</p>
	<a href="http://docs.cortext.net">Cortext Manager</a>
	</div>
<div style="clear:both;"></div>
<div class="trigger">
<span class="letter">h</span>
<span class="letter">e</span>
<span class="letter">l</span>
<span class="letter">p</span>
</div>

<script type="text/javascript"><%= startup %></script>
</body>

</html>