<form action='/' method='post'>
  <h3>Reset your password.</h3>
  <p>By filling in this form, you are requesting that your password on this site be reset, and that we
  send you an email to your configured email address containing a link allowing you to log in and change
  you password.</p>
<div>
    <label for='id'>Username</label>
    <input type='text' name='id' />
</div>
<div class='buttons'>
    <input type='submit' value='Reset password' />
</div>
<div>
    <%= this.ReCaptcha() %>
</div>
</form>
